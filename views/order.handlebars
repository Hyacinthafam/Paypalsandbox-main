<script>
  // JavaScript functions to dynamically add/delete item fields

  // Counter to track the number of item fields
  let itemCount = 1;

  function addItem() {
    const container = document.getElementById("items-container");

    // Create a new item field group
    const itemGroup = document.createElement("div");
    itemGroup.id = `item-${itemCount}`;

    // Add input fields for item details
    itemGroup.innerHTML = `
      <input type="text" name="items[${itemCount}][name]" placeholder="Item Name" required>
      <input type="text" name="items[${itemCount}][sku]" placeholder="SKU" required>
      <input type="number" name="items[${itemCount}][price]" placeholder="Price" step="0.01" required>
      <input type="number" name="items[${itemCount}][quantity]" placeholder="Quantity" min="1" required>
    `;

    // Append the item group to the container
    container.appendChild(itemGroup);

    // Increment the item count
    itemCount++;
  }

  function deleteItem() {
    if (itemCount > 1) {
      const container = document.getElementById("items-container");

      // Remove the last item group
      const lastItem = document.getElementById(`item-${itemCount - 1}`);
      container.removeChild(lastItem);

      // Decrement the item count
      itemCount--;
    }
  }
</script>